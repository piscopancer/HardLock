#panel {
    flex-grow: 1;
}

#balance {
    margin-left: 10%;
    margin-right: 10%;
    margin-top: 10%;
    margin-bottom: 0;
}

#crystals {
    flex-direction: row;
    align-items: center;
    justify-content: flex-end;
}

#icon-crystal {
    width: 80px;
    height: 80px;
    margin-right: 50px;
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/crystal_0.png?fileID=2800000&guid=355371d6a4536ae4abea796d8969958a&type=3#crystal_0');
}

#modes {
    flex-grow: 1;
    margin-top: 100px;
}

#buttons-mode {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    margin-top: 50px;
}

.button-mode {
    padding-top: 80px;
    padding-bottom: 80px;
    align-items: center;
}

.button-mode .icon {
    width: 80px;
    height: 80px;
}

#button-prev-mode {
    border-top-right-radius: 50px;
    border-bottom-right-radius: 50px;
    border-left-width: 0;
}

#button-next-mode {
    border-bottom-left-radius: 50px;
    border-top-left-radius: 50px;
    border-right-width: 0;
}

#button-play {
    flex-grow: 1;
    margin-left: 5%;
    margin-right: 5%;
    height: 200px;
    border-top-left-radius: 100px;
    border-bottom-left-radius: 100px;
    border-top-right-radius: 100px;
    border-bottom-right-radius: 100px;
    align-items: center;
    flex-direction: row;
    justify-content: center;
}

#icon-play {
    width: 80px;
    height: 80px;
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/play.png?fileID=2800000&guid=0e7fa6bf5d3430545bc79a4cab9ee3ba&type=3#play');
    margin-right: 40px;
}

#icon-prev {
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/arrow-left.png?fileID=2800000&guid=9dfd7602abd69e242b359f00dff64769&type=3#arrow-left');
}

#icon-next {
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/arrow-right.png?fileID=2800000&guid=3c244254acda3c64dba6ad7a297aa8c0&type=3#arrow-right');
}

#buttons {
    margin-top: 20%;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 20%;
    align-items: flex-end;
}

#button-shop {
    height: 150px;
    border-top-left-radius: 75px;
    border-bottom-left-radius: 75px;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    padding-left: 50px;
    border-right-width: 0;
}

#icon-shop {
    width: 80px;
    height: 80px;
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/shop_basket.png?fileID=2800000&guid=147b231c1a84b8741a2ec89c28466a00&type=3#shop_basket');
}

#label-shop {
    padding-left: 10%;
    padding-right: 10%;
}

#buttons-bottom {
    flex-direction: row;
    justify-content: space-between;
    flex-grow: 1;
    align-items: center;
    margin-top: 20%;
}

#buttons-bottom .unity-button {
    flex-grow: 1;
    background-color: rgba(0, 0, 0, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    align-items: center;
    padding-top: 50px;
    padding-bottom: 50px;
}

#buttons-bottom .unity-button:active {
    background-color: rgba(255, 255, 255, 0.1);
}

#buttons-bottom .unity-button .icon {
    width: 80px;
    height: 80px;
}

#icon-settings {
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/settings_icon.png?fileID=2800000&guid=a17cf753cc548284086c398fac013c78&type=3#settings_icon');
}

#icon-quit {
    background-image: url('project://database/Assets/%E2%80%94%20Sprites/turn_off_icon.png?fileID=2800000&guid=1e86ec34112b33143892d3ff620bb3b6&type=3#turn_off_icon');
}
